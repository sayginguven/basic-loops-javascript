//for loop
var i;
for(i = 0; i < 10; i+=1){
  console.log(i); // always terminate with semicolon even though it will not change the result.
}


//while loop
var j = 0;
while(j < 10){
  console.log(j);
  j+=1; // do not forget this line, it will cause infinite loop without this.
}

//do while loop
var k =0;
do {
  console.log(k);
  k+=1; // do not forget this line, it will cause infinite loop without this.
} while( k<10 );
